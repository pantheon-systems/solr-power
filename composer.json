{
    "name": "pantheon-systems/solr-power",
    "description": "An open source plugin to connect to Pantheon's Apache Solr search infrastructure, or your own!",
    "type": "wordpress-plugin",
    "license": "GPLv2 or later",
    "authors": [
        {
            "name": "Pantheon",
            "email": "noreply@pantheon.io"
        }
    ],
    "support": {
      "issues": "https://github.com/pantheon-systems/solr-power/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "solarium/solarium": "~5",
        "symfony/event-dispatcher": "^3.4"
    },
    "require-dev": {
        "pantheon-systems/pantheon-wordpress-upstream-tests": "dev-master",
        "wp-coding-standards/wpcs": "dev-develop as 2.3.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
        "phpunit/phpunit": "^9",
        "phpcompatibility/php-compatibility": "^9.3",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "scripts": {
        "lint": [
            "@phpcbf",
            "@phpcs"
        ],
        "fix": [
            "@phpcbf"
        ],
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf",
        "phpunit": "vendor/bin/phpunit",
        "test": "@phpunit"
    },
    "autoload": {
        "classmap": [
            "includes"
        ]
    }
}
